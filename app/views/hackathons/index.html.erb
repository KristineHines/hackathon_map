<div id="header">
  <h1 id="page_title">Hackathons Around the World</h1>
</div>
<div class="jumbotron" id="map_container">
  <div id="map" ></div>
  <script>
      handler = Gmaps.build('Google');
      console.log(handler)
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
          var markers = handler.addMarkers(<%=raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
      });
  </script>
</div>

<div class="container" id="hack_boxes">
  <% @hackathons.each do |hackathon| %>
  <div class="hack_box">
    <%= image_tag "#{hackathon['logo']}", class: "hack_img"%>
      <a href=<%= hackathon['url'] %>><h3 class="hack_title"><%=hackathon["name"]%></h3></a>
    </div>
  <%end%>
</div>
